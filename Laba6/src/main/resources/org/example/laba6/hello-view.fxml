<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.laba6.Controller">
  <TextArea fx:id="inputTextField" />
  <CheckBox fx:id="txtInput" text="txt" />
  <CheckBox fx:id="xmlInput" text="xml" />
  <CheckBox fx:id="jsonInput" text="json" />
  <TextArea fx:id="outputTextField" />
  <CheckBox fx:id="txtOutput" text="txt" />
  <CheckBox fx:id="xmlOutput" text="xml" />
  <CheckBox fx:id="jsonOutput" text="json" />
  <Button fx:id="formatButton" text="Форматировать" />
