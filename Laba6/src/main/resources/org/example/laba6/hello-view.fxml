  <RadioButton fx:id="sortId" text="Sort by ID" />
  <RadioButton fx:id="sortMax_speed" text="Sort by Max Speed" />
  <RadioButton fx:id="sortModel" text="Sort by Model" />
  <RadioButton fx:id="sortPrice" text="Sort by Price" />
  <RadioButton fx:id="sortType" text="Sort by Type" />
  <Button fx:id="sortButton" text="Sort" />
  <RadioButton fx:id="shifrBox" text="Encrypt" />
  <RadioButton fx:id="hashBox" text="Hash" />
  <Button fx:id="saveButton_2" text="Save" />
